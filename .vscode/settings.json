{
  "[helm]": {
    "editor.defaultFormatter": "ms-kubernetes-tools.vscode-kubernetes-tools"
  },
  "[python]": {
    "editor.formatOnType": false
  },

  "yaml.schemas": {
    /**
     * DO NOT add any mappings for kubernetes yaml files.
     * vscode-kubernetes-tools will automatically manage these mappings for you.
     */
  },

  "markdown.styles": [
    "https://use.fontawesome.com/releases/v6.1.2/css/all.css"
  ],

  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "cSpell.words": ["cnpg", "initdb"]
}
